    in_file=input.${txtname}.txt

    #
    $DICTD -c $conf_file -i --stdin2stdout < "$in_file" |
    @AWK@ '/^2[25]0 / { print $1; next; } {print}' \
	| $noorder > _dictd_${txtname}_res.txt

    #
    cmp_2_files dictd_${txtname}_res.expected.txt _dictd_${txtname}_res.txt
}

dictd_test_inetd2 (){
